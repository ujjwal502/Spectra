        <!-- Offline profile for completely offline builds -->
        <profile>
            <id>offline</id>
            <properties>
                <maven.test.skip>true</maven.test.skip>
                <skipTests>true</skipTests>
            </properties>
        </profile>
    </profiles>

    <!-- Active profiles -->
    <activeProfiles>
        <activeProfile>default</activeProfile>
    </activeProfiles>

</settings> 