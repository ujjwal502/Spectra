{
  "name": "spectra",
  "version": "0.2.0",
  "description": "AI-powered automation regression testing agent for APIs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate": "ts-node src/index.ts generate",
    "generate:ai": "ts-node src/index.ts generate --ai",
    "run": "ts-node src/index.ts run",
    "run:ai": "ts-node src/index.ts run --ai"
  },
  "keywords": [
    "api",
    "testing",
    "automation",
    "gherkin",
    "regression",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^9.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "ajv": "^8.17.1",
    "axios": "^1.8.4",
    "cucumber": "^6.0.7",
    "dotenv": "^16.5.0",
    "gherkin-parse": "^1.0.12",
    "jest": "^29.7.0",
    "newman": "^6.2.1",
    "openai": "^4.93.0",
    "openapi-parser": "^0.2.0",
    "openapi-types": "^12.1.3",
    "swagger-parser": "^10.0.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "prettier": "^3.5.3"
  }
}
