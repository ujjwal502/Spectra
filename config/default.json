{
  "api": {
    "defaultTimeout": 30000,
    "retryAttempts": 3,
    "retryDelay": 1000
  },
  "openai": {
    "apiKey": "",
    "model": "gpt-4",
    "maxTokens": 1000,
    "temperature": 0.7
  },
  "gherkin": {
    "templates": {
      "feature": "Feature: {title}\n  {description}\n\n  {scenarios}",
      "scenario": "  Scenario: {title}\n    {steps}",
      "step": "    {keyword} {text}"
    }
  },
  "runner": {
    "parallel": 5,
    "defaultEnvironment": "development"
  },
  "mock": {
    "dataPath": "./data/mocks"
  }
}
